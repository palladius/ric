#!/usr/bin/env ruby

require 'rubygems'

def main
  require 'ric' #, :version => '0.9.7'
  dir = File.dirname( File.dirname(__FILE__) + '/../' )
  ver_manual = File.read( File.expand_path('VERSION-symlink',dir) )
  ver = Ric::Zibaldone.version rescue "UnknownVersionErr(#{$!})"
  puts "#{$0} v.#{ver_manual}"
  puts "Welcome to ric, the swiss-army knife tool from Riccardo, included in riclib gem (version=#{ver})"
  pyellow 'ciao' rescue "Errors with color yellow: #{$!}"  
end

main